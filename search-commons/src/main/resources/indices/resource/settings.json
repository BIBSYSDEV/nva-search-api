{
  "number_of_shards": 5,
  "number_of_replicas": 1,
  "mapping": {
    "total_fields": {
      "limit": "1100"
    }
  },
  "analysis": {
    "char_filter": {
      "quote": {
        "type": "mapping",
        "mappings": [
          "« => \"",
          "» => \"",
          "\"\" => \""
        ]
      }
    },
    "filter": {
      "standard_nva_filter": {
        "type": "asciifolding",
        "preserve_original": true
      }
    },
    "analyzer": {
      "default": {
        "type": "custom",
        "tokenizer": "standard",
        "char_filter": [
          "html_strip",
          "quote"
        ],
        "filter": [
          "lowercase",
          "standard_nva_filter",
          "scandinavian_normalization"
        ]
      }
    },
    "normalizer": {
      "lowercase_normalizer": {
        "type": "custom",
        "char_filter": [],
        "filter": ["lowercase"]
      }
    }
  }
}